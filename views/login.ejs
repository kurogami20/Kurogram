<%- include('./partials/header') %>
<main>
  <div class="contain">
    <h2>Connectez vous</h2>
    <% if (locals.errorLog) { %>
    <h3 style="color: red"><%= errorLog %></h3>
    <% } else if (locals.successAccount) {%>
    <h3 style="color: rgb(204, 204, 204)"><%= successAccount %></h3>
    <%}%>

    <form class="form-login" method="post">
      <fieldset>
        <label>
          <span class="text_label">Nom d'utilisateur</span>
          <input name="name" placeholder="jambon_du_75" />
        </label>
      </fieldset>
      <fieldset>
        <label>
          <span class="text_label">Mot de passe</span>
          <input name="password" type="password" />
        </label>
      </fieldset>
      <button class="sub_button" type="submit">Se connecter</button>
    </form>
