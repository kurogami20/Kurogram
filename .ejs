<% if (locals.info) { %>

<div class="user">
  <div class="circle_user">
    <% if (info.photo!=="") { %>
    <img
      style="border-radius: 50%; object-fit: cover; width: 100%; height: 100%"
      src="<%=info.photo%>"
      alt=""
    />
    <% } else { %>

    <div class="user">
      <div
        class="circle_user"
        style="
          border: solid 2px white;
          border-radius: 50%;
          width: 2rem;
          height: 2rem;
          display: flex;
          align-items: center;
          justify-content: center;
          background-color: black;
        "
      >
        <% if (checkingAccount.photo!=="") { %>
        <img
          style="
            border-radius: 50%;
            object-fit: cover;
            width: 100%;
            height: 100%;
          "
          src="<%=checkingAccount.photo%>"
          alt=""
        />
        <% } else { %>

        <div class="user">
          <div class="circle_user"><i class="fa-solid fa-user"></i></div>
        </div>
        <%}%>
      </div>
    </div>
    <%}%>
  </div>
  <a href="/login/account/<%= info.name %>"
    ><strong class="user_connect"><%= info.name %></strong></a
  >
</div>
<% } else if (locals.inAccount) { %>
<div class="user">
  <a href="/log_out">
    <span>
      <i class="fa-solid fa-right-from-bracket"></i>
    </span>
    <strong class="user_connect">Se d√©connecter</strong></a
  >
</div>

<% }else { %>

<div class="user">
  <div
    class="circle_user"
    style="
      border: solid 2px white;
      border-radius: 50%;
      width: 2rem;
      height: 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: black;
    "
  >
    <i class="fa-solid fa-user" style="font-size: 1rem"></i>
  </div>
  <a href="/login"><strong class="user_connect">Se connecter</strong></a>
</div>
<% } %>
